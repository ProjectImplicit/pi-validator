{
  "name": "pi-validator",
  "version": "1.0.5",
  "description": "Dashboard expanssion for PI",
  "main": "index.js",
  "scripts": {
    "test": "eslint src",
    "js": "rollup --config --sourcemap",
    "watch:js": "rollup --config --sourcemap --watch",
    "css": "node-sass src/style/style.scss --output dist --source-map=true",
    "watch:css": "node-sass -w src/style --output dist --source-map=true",
    "watch": "npm-run-all --parallel watch:*",
    "bundle": "npm-run-all --parallel js css",
    "bust-cache": "sed -i'' -e \"s/\\(?v=\\)[0-9]*/\\1$(date +%s)/\" index.html",
    "prebundle": "npm run bust-cache",
    "prewatch": "npm run bust-cache",
    "prestart": "npm run bust-cache",
    "version": "npm-run-all minify css && git add -A dist",
    "minify": "rollup --config --environment NODE_ENV:production"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "mithril": "^0.2.8",
    "pikaday": "^1.4.0",
    "promise-polyfill": "^8.1.0",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "body-parser": "^1.14.2",
    "buble": "^0.12.3",
    "eslint": "^5.9.0",
    "express": "^4.14.0",
    "multer": "^1.1.0",
    "node-sass": "^3.13.1",
    "npm-run-all": "^2.3.0",
    "rollup": "^0.67.1",
    "rollup-plugin-buble": "^0.12.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "rollup-watch": "^2.4.0"
  }
}
